<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ManageTasksFragment">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        >

        <TableRow
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#006064"
            >

            <TextView
                android:id="@+id/header1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/header2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_column="1" />

            <TextView
                android:id="@+id/header3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_column="1" />

            <TextView
                android:id="@+id/header4"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_column="1" />

            <TextView
                android:text="Action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_column="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

            <TextView
                android:id="@+id/field1_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field1_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field1_3"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field1_4"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/deleteButton1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:icon="@drawable/ic_close_black_24dp"></Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#f2f2f2"
            >

            <TextView
                android:id="@+id/field2_1"
                android:text="3.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field2_2"
                android:text="7.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field2_3"
                android:text="5.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field2_4"
                android:text="5.2"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_column="1" />

            <Button
                android:id="@+id/deleteButton2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:icon="@drawable/ic_close_black_24dp"></Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

            <TextView
                android:id="@+id/field3_1"
                android:text="3.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field3_2"
                android:text="7.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field3_3"
                android:text="5.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field3_4"
                android:text="5.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_column="1" />

            <Button
                android:id="@+id/deleteButton3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:icon="@drawable/ic_close_black_24dp"
            ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#f2f2f2"
            >

            <TextView
                android:id="@+id/field4_1"
                android:text="3.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field4_2"
                android:text="7.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field4_3"
                android:text="5.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field4_4"
                android:text="5.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_column="1" />

            <Button
                android:id="@+id/deleteButton4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:icon="@drawable/ic_close_black_24dp"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            >

            <TextView
                android:id="@+id/field5_1"
                android:text="3.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field5_2"
                android:text="7.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field5_3"
                android:text="5.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_column="1" />

            <TextView
                android:id="@+id/field5_4"
                android:text="5.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_column="1" />

            <Button
                android:id="@+id/deleteButton5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:icon="@drawable/ic_close_black_24dp"
                ></Button>
        </TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:padding="16px"
        android:layout_marginTop="72dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:layout_weight="0"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            />
    </LinearLayout>


</LinearLayout>